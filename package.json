{
  "name": "pineapplejs",
  "version": "0.1.0",
  "main": "build/server/index.js",
  "repository": "https://github.com/cdleveille/pineapplejs.git",
  "author": "Chris Leveille <cdleveille@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx . && prettier --write .",
    "build": "rimraf build && concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn build-server\" \"yarn build-client\"",
    "build-server": "rimraf build/server && rimraf build/shared && tsc -b src/server",
    "build-client": "rimraf build/client && webpack && rimraf build/client/*LICENSE.txt",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn dev-server\" \"yarn dev-client\"",
    "dev-server": "ts-node-dev --respawn --transpile-only --project src/server/tsconfig.json src/server/index.ts",
    "dev-client": "webpack watch",
    "start": "node ."
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "deck-of-cards": "^0.1.8",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/plugin-transform-runtime": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.42",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "javascript-obfuscator": "^4.0.0",
    "prettier": "^2.7.0",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-obfuscator": "^3.5.1",
    "workbox-webpack-plugin": "^6.5.3"
  }
}
